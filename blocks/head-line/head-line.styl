.head-line
  width: 100%
  background: #28363d
  height: 120px
  max-height: 120px
  display: flex
  justify-content: center
  align-items: center
  position: fixed
  z-index: 100
  &.min
    height: 80px
    max-height: 80px
    line-height: 80px
    .head-line__menu
    .head-line__btn
      height: 100%
      font-size: 14px
      font-family: "Myriad Pro"
      color: #fff
      text-transform: uppercase
      white-space: nowrap
      text-align: center
      cursor: pointer
      &.selected
        height: 76px
        background: #1e292f
        border-bottom: 4px
        border-color: #ff8207
        border-style: solid
      &-request
        min-width: 160px
        height: 36px
        font-size: 16px
        font-family: "Myriad Pro"
        color: #ff8207
        text-align: center
        text-transform: uppercase
        border-radius: 10px
        border-color: #ff8207
        border-width: 2px
        border-style: solid
        cursor: pointer
        display: flex
        align-items: center
        justify-content: center
    .head-line__contacts
      display: none
  &__container
    container(center, nowrap)
    align-items: center
    justify-content: space-around
  &__menu
    display: flex
    wrap: nowrap
    justify-content: space-between
    align-items: center
    height: 120px
    &-hamburger
      display: none
  &__side_menu
    width: 200px
    height: 300px
    background-color: #28363d
    font-family: "Myriad Pro"
    font-size: 18px
    color: #fff
    position: absolute
    left: 0
    top: 80px
    display: none
    flex-direction: column
    justify-content: space-around
    &.selected
      display: flex
    &-btn
      display: flex
      align-items: center
      height: 100%
      border-bottom: 2px
      border-color: #1e292f
      border-style: solid
      padding-left: 20px
      cursor: pointer
      &.selected
        align-items: center
        border-bottom: 4px
        border-color: #ff8207
        border-style: solid
  &__btn
    font-size: 14px
    font-family: "Myriad Pro"
    color: #fff
    text-transform: uppercase
    white-space: nowrap
    text-align: center
    margin: 0 5px
    padding: 0 5px
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    &.selected
      height: 116px
      display: flex
      align-items: center
      justify-content: center
      background: #1e292f
      border-bottom: 4px
      border-color: #ff8207
      border-style: solid
    &-request
      display: none
  &__logo
    height: 100%
    img
      display: flex
      justify-content: center
      align-items: center
  &__contacts
    min-width: 160px
    font-size: 14px
    font-family: "Myriad Pro"
    color: #ff8207
    display: flex
    align-self: center
    flex-flow: column wrap
    line-height: 1.66
    z-index: 202
    &-first, &-second
      display: flex
      white-space: nowrap
      font-weight: bold
.window-request
  font-family: "Myriad Pro"
  color: #fff
  width: 600px
  height: 400px
  background-color: #28363d
  border-style: solid
  border-color: #fff
  border-radius: 10px
  border-width: 2px
  position: absolute
  display: none
  flex-direction: column
  justify-content: space-around
  align-items: center
  left:0
  right:0
  margin: 300px auto
  z-index: 101
  &__header
    display: flex
    align-items: center
    justify-content: center
    font-size: 24px
    height: 30px
    text-transform: uppercase
    margin: 5px
  &__input
    width: 500px
    height: 200px
    font-size: 16px
    margin-bottom: 20px
    resize: none
  &__btn
    width: 100%
    display: flex
    justify-content: space-around
    font-size: 16px
    text-transform: uppercase
    &-close, &-send
      width: 120px
      height: 30px
      color: #ff8207
      cursor: pointer
      border-radius: 10px
      border-width: 2px
      border-color: #ff8207
      border-style: solid
      display: flex
      justify-content: center
      align-items: center

/* Tablet */
@media only screen and (min-width : $tablet-min) and (max-width : $tablet-max)
  .head-line
    &__container
      justify-content: space-around
      width: 100%
    &__logo
      height: 100%
      width: 80px
      img
        width: 80px
    &__btn
      min-width: auto
      font-size: 12px
      margin: 0 5px
    &__contacts
      min-width: 80px
      font-size: 10px
    &.min
      .head-line__btn
        font-size: 12px
        margin: 0 5px
        height: 80px
        min-width: auto
        &-request
          font-size: 13px
          min-width: 130px
/* Mobile */
@media only screen and (min-width : $mobile-min) and (max-width : $mobile-max)
  .head-line
    width: 100%
    background: #28363d
    height: 80px
    &__container
      width: 100%
      justify-content: space-around
    &__logo
      width: 120px
      img
        width: 120px
    &__menu
      display: none
      &-hamburger
        display: block
    &__contacts
      min-width: 100px
    &.min
      .head-line__btn-request
        font-size: 13px
        min-width: 130px
  .window-request
    width: 280px
    height: 230px
    margin: 300px auto
    z-index: 101
    &__header
      font-size: 18px
      height: 20px
      text-transform: uppercase
      margin: 5px
    &__input
      width: 230px
      height: 190px
      font-size: 16px
      margin-bottom: 0
    &__btn
      font-size: 16px
      &-close, &-send
        width: 100px
        height: 20px
        margin: 15px 0