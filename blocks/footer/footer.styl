.footer
  &__container
    container()
    width: 100%
    height: 100%
    font-family: "Myriad Pro"
    flex-flow: column
    margin-top: 80px
  &__content
    width: 100%
    height: 250px
    background-color: #28363d
    background-image: url("/img/map.png")
    background-repeat: no-repeat
    background-position: right
    display: flex
    justify-content: space-around
  &__logo
    height: 100%
    display: flex
    flex-direction: column
    justify-content: center
    // &-img
    &-text
      font-size: 14px
      color: #ffffff
      line-height: 1.714
      text-align: left
  &__media
    height: 100%
    display: flex
    flex-direction: column
    justify-content: center
    &-text
      font-size: 16px
      color: #ffffff
      font-weight: bold
      text-transform: uppercase
      line-height: 2.25
      text-align: right
    &-icons
      display: flex
      justify-content: space-between
  &__contacts
    height: 100%
    display: flex
    flex-direction: column
    justify-content: center
    &-header
      font-size: 16px
      color: #ffffff
      font-weight: bold
      text-transform: uppercase
      line-height: 2.25
      text-align: right
    &-text
      font-size: 14px
      color: #ffffff
      line-height: 1.286
      text-align: right
  &__copyrights
    width: 100%
    height: 60px
    font-size: 14px
    color: #ffffff
    background-color: #1e292f
    text-transform: uppercase
    line-height: 2.571
    text-align: center
    display: flex
    justify-content: center
    align-items: center
.separator
  display: flex
  width: 100%
  justify-content: center
  margin: 10px 0
.btn-up
  width: 54px
  height: 54px
  background-image: url('/img/btn-up.png')
  background-repeat: no-repeat
  background-position: center
  border-width: 3px
  border-color: #ff8207
  border-style: solid
  border-radius: 10px
  position: absolute
  right: 100px
  bottom: 400px
  cursor: pointer
  
/* Mobile */
@media only screen and (min-width : $mobile-min) and (max-width : $mobile-max)
  .footer
    &__logo-img
      img
        width: 80px
    &__media
      &-text
        font-size: 12px
    &__contacts
      &-header
        font-size: 12px
      &-text
        width: 100px
  .btn-up
    right: 40px