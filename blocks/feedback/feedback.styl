.feedback
  &__container
    container()
    col(18)
    font-family: "Myriad Pro"
    height: calc(100% - 80px)
    justify-content: space-between
    flex-flow: column
  &__text
    display: flex
    flex-direction: column
    align-items: center
    &-header
      font-size: 48px
      color: #28363d
      text-transform: uppercase
      line-height: 0.917
      text-align: center
    &-desc
      font-size: 18px
      color: #8198a0
      line-height: 2
      text-align: center
  &__contacts
    display: flex
    justify-content: space-between
  &__about
    display: flex
    flex-direction: column
    margin: 5px
    &-header
      font-size: 24px
      color: #ff8207
      font-weight: bold
      line-height: 1
      text-transform: uppercase
      text-align: left
      margin-bottom: 10px
    &-desc
      font-size: 18px
      color: #999999
      line-height: 1.333
      text-align: left
      margin-bottom: 10px 
  &__form    
    form
      display: flex
      flex-direction: column
      margin: 5px
    &-label
      font-size: 24px
      color: #28363d
      font-weight: bold
      line-height: 1
      text-transform: uppercase
      margin-bottom: 10px
    &-input, &-textarea
      width: 540px
      font-size: 18px
      color: #c0c0c0
      font-style: italic
      line-height: 1.333
      text-align: left
      margin-bottom: 10px
      border-top: 0px
      border-left: 0px
      border-right: 0px
      border-bottom: 0.5px
      opacity: 0.251
      border-style: solid
      border-color: #999999
    &-textarea
      background-image: linear-gradient(
      #fff 30px, #999 30px, #999 31px, #fff 32px,
       #fff 61px, #999 61px, #999 62px, #fff 63px,
       #fff 92px, #999 92px, #999 93px, #fff 94px,
       #fff 123px, #999 123px, #999 124px, #fff 125px
       )
      line-height: 30.5px
      resize: none
    &-input:focus, &-textarea:focus
      outline: none
      color: #28363d
      opacity: 1
    &-kaptcha
      display: flex
      height: 100%
      display: flex
      flex-direction: column
      justify-content: flex-end
      img
        width: 137px
        height: 41px
  &__kaptcha-input
    font-size: 18px
    width: 180px
    color: #c0c0c0
    font-style: italic
    line-height: 1.333
    text-align: left
    margin-bottom: 10px
    border-top: 0px
    border-left: 0px
    border-right: 0px
    border-bottom: 0.5px
    opacity: 0.251
    border-style: solid
    border-color: #999999
    &:focus
      outline: none
      color: #28363d
      opacity: 1
  &__photo
    display: flex
    align-items: center
  &__confirmation
    height: 100%
    display: flex
    align-items: flex-end
  &__btn
    &-add, &-submit
      border-radius: 10px
      background-color: #ff8207
      cursor: pointer
      font-size: 18px;
      color: #ffffff
      text-transform: uppercase
      line-height: 2.222
      text-align: center
    &-add
      display: flex
      width: 49px
      height: 49px
      justify-content: center
      align-items: center
      margin: 5px
    &-submit
      width: 220px
      height: 60px
      margin: 5px
.separator
  display: flex
  width: 100%
  justify-content: center
  margin: 10px 0

/* Tablet */ 
@media only screen and (min-width : $tablet-min) and (max-width : $tablet-max)
  .feedback
    &__container
      justify-content: center
    &__contacts
      padding-top: 20px
    &__about
      padding-bottom: 60px
    &__form-input, &__form-textarea
      width: 270px
    &__confirmation
      flex-direction: column
      align-items: flex-start
    &__btn-submit
      width: 140px
      height: 40px
        
/* Mobile */
@media only screen and (min-width : $mobile-min) and (max-width : $mobile-max)
  .feedback
    &__container
      align-items: center
    &__text-desc
      width: 240px
    &__contacts
      width: 240px
      padding-top: 20px
      flex-direction: column
    &__about
      padding-bottom: 60px
    &__form-input, &__form-textarea
      width: 230px
    &__confirmation
      flex-direction: column
      align-items: flex-start
    &__btn-submit
      width: 140px
      height: 40px